<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/box_grise"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Question 1 -->
        <TextView
            android:id="@+id/q1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qu'est-ce que MediPass ?"
            android:textSize="18sp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/img_10"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_below="@id/q1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/white"
            android:text="Créez votre profil : Téléchargez l'application MediPass et créez votre profil en quelques minutes.\nAjoutez vos données médicales : Renseignez vos antécédents médicaux, vos allergies, vos médicaments, vos contacts d'urgence et bien plus encore.
        \nPartagez vos données en cas d'urgence : En cas d'urgence, les professionnels de la santé pourront accéder à vos données médicales via l'application MediPass."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Question 2 -->
        <TextView
            android:id="@+id/q2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment fonctionne MediPass ?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginBottom="8dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/img_10"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_below="@id/q2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/white"
            android:text="MediPass est une plateforme numérique qui facilite la collecte et le partage automatisés de vos données médicales en cas d'urgence."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Question 3 -->
        <TextView
            android:id="@+id/q3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qui peut utiliser MediPass ?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginBottom="8dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/img_10"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_below="@id/q3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/white"
            android:text="MediPass est conçu pour tout le monde, quel que soit votre âge ou votre état de santé.
        L'application est particulièrement utile pour les personnes : Âgées Souffrant de maladies chroniques Ayant des allergies Prenant plusieurs médicaments Voyageant"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Question 4 -->
        <TextView
            android:id="@+id/q4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MediPass est-il sûr ?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginBottom="8dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/img_10"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_below="@id/q4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/white"
            android:text="Oui, MediPass est une application sécurisée qui utilise les dernières technologies de cryptage pour protéger vos données médicales."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Question 5 -->
        <TextView
            android:id="@+id/q5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Combien coûte MediPass ?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginBottom="8dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/img_10"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_below="@id/q5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/white"
            android:text="MediPass est un service gratuit pour les utilisateurs."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Question 6 -->
        <TextView
            android:id="@+id/q6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment puis-je modifier mes données médicales ?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginBottom="8dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/img_10"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_below="@id/q6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/white"
            android:text="Vous pouvez modifier vos données médicales à tout moment en vous connectant à votre compte MediPass."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Question 6 -->
        <TextView
            android:id="@+id/q7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N'hésitez pas à nous contacter si vous avez des questions :"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginBottom="8dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/img_10"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_below="@id/q7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/white"
            android:text="Vous pouvez modifier vos données médicales à tout moment en vous connectant à votre compte MediPass."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

    </RelativeLayout>



</LinearLayout>
