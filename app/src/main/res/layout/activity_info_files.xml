<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:src="@drawable/frame_f"
    tools:context=".MedicalFiles">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/box_violet"
        android:elevation="10dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/mon_profil"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/ange"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/config"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ligne_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dashboard"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logo" />

                    <TextView
                        android:id="@+id/appdesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/qr"
                        android:textColor="@color/blue"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        tools:ignore="SmallSp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/userdashbord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_5" />

                    <TextView
                        android:id="@+id/session"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="@string/logout"
                        android:textColor="@color/blue"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        tools:ignore="SmallSp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/ligne_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ligne_a"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/profile" />

                <TextView
                    android:id="@+id/session1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/hello"
                    android:layout_gravity="center"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ligne_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ligne_b"
            android:layout_marginTop="15dp"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:src="@drawable/img_7" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ligne_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/blanchatre"
            android:layout_below="@+id/ligne_c"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/data_a"
                        android:textColor="@color/blue"
                        android:textSize="11sp"
                        android:textStyle="normal"
                        android:maxLines="2" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="invisible"
                        android:src="@drawable/trait" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/data_b"
                        android:textColor="@color/blue"
                        android:textSize="11sp"
                        android:textStyle="normal"
                        android:maxLines="2" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/trait"
                        android:visibility="invisible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/data_c"
                        android:textColor="@color/blue"
                        android:textSize="11sp"
                        android:textStyle="normal"
                        android:maxLines="2" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/trait"
                        android:visibility="visible" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_f"
            android:layout_below="@+id/ligne_d"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_red"
                    android:layout_marginEnd="-10dp"
                    android:layout_marginStart="-5dp"
                    android:elevation="15dp"
                    >

                </ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:background="@drawable/bg_data">


                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="7dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:orientation="horizontal">
                                        <LinearLayout
                                            android:id="@+id/reg"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/prenomtxt"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="@string/prenom"
                                                android:textSize="13sp"
                                                android:textStyle="bold"/>

                                            <EditText
                                                android:id="@+id/prenom"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:ems="9"
                                                android:inputType="text"
                                                android:hint="@string/hint_prenom"
                                                android:paddingStart="5dp"
                                                android:textSize="16sp"
                                                tools:ignore="RtlSymmetry"
                                                android:background="@drawable/box_a" />

                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="15dp"
                                            android:orientation="vertical">
                                            <TextView
                                                android:id="@+id/nomtxt"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="@string/nom"
                                                android:textSize="13sp"
                                                android:textStyle="bold"/>

                                            <EditText
                                                android:id="@+id/nom"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:ems="9"
                                                android:inputType="text"
                                                android:hint="@string/hint_nom"
                                                android:paddingStart="5dp"
                                                android:textSize="16sp"
                                                tools:ignore="RtlSymmetry"
                                                android:background="@drawable/box_a" />

                                        </LinearLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:orientation="horizontal">
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/sangtxt"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="@string/sang"
                                                android:textSize="13sp"
                                                android:textStyle="bold"/>

                                            <EditText
                                                android:id="@+id/sang"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:ems="9"
                                                android:inputType="text"
                                                android:hint="@string/hint_sang"
                                                android:paddingStart="5dp"
                                                android:textSize="16sp"
                                                tools:ignore="RtlSymmetry"
                                                android:background="@drawable/box_a" />

                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="15dp"
                                            android:orientation="vertical">
                                            <TextView
                                                android:id="@+id/poidstxt"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Poids"
                                                android:textSize="13sp"
                                                android:textStyle="bold"/>

                                            <EditText
                                                android:id="@+id/poids"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:ems="9"
                                                android:inputType="text"
                                                android:hint="Saisir le Poids"
                                                android:paddingStart="5dp"
                                                android:textSize="16sp"
                                                tools:ignore="RtlSymmetry"
                                                android:background="@drawable/box_a" />

                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="15dp"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Vous vivez seul ?"
                                            android:textSize="13sp"
                                            android:textStyle="bold"/>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">
                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal"
                                                android:background="@drawable/purple"
                                                android:paddingStart="5dp"
                                                android:paddingEnd="5dp"
                                                android:gravity="center"
                                                >
                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:src="@drawable/ring"/>
                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="OUI"
                                                    android:textSize="12sp"
                                                    android:textStyle="bold">
                                                </TextView>

                                            </LinearLayout>
                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal"
                                                android:background="@drawable/purple"
                                                android:paddingStart="5dp"
                                                android:paddingEnd="5dp"
                                                android:layout_marginStart="20dp"
                                                android:gravity="center"
                                                >
                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:src="@drawable/ring"/>
                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="NON"
                                                    android:textSize="12sp"
                                                    android:textStyle="bold">
                                                </TextView>

                                            </LinearLayout>
                                        </LinearLayout>

                                    </LinearLayout>
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal">
                                        <LinearLayout
                                            android:id="@+id/aliment"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="15dp"
                                            android:layout_centerVertical="true"
                                            android:orientation="vertical">

                                            <!-- TextView et EditText pour le pays -->
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Aliments"
                                                android:textSize="13sp"
                                                android:textStyle="bold" />
                                            <EditText
                                                android:id="@+id/alimenttxt"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/box_b"
                                                android:ems="9"
                                                android:hint="Saisir vos aliments"
                                                android:inputType="text"
                                                android:paddingStart="5dp"
                                                android:textSize="16sp"
                                                tools:ignore="RtlSymmetry" />

                                        </LinearLayout>

                                        <ImageButton
                                            android:id="@+id/btn_b"
                                            android:layout_width="16dp"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="20dp"
                                            android:layout_toEndOf="@id/aliment"
                                            android:background="@android:color/transparent"
                                            android:src="@drawable/plus">

                                        </ImageButton>

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:text=" arachide"
                                            android:paddingStart="5dp"
                                            android:paddingEnd="5dp"
                                            android:textSize="12sp"
                                            android:background="@drawable/purple"
                                            android:layout_below="@id/aliment"
                                            android:textStyle="bold" />
                                    </RelativeLayout>
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal">
                                        <LinearLayout
                                            android:id="@+id/allergie"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="15dp"
                                            android:layout_centerVertical="true"
                                            android:orientation="vertical">

                                            <!-- TextView et EditText pour le pays -->
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Allergies"
                                                android:textSize="13sp"
                                                android:textStyle="bold" />
                                            <EditText
                                                android:id="@+id/allergietxt"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/box_b"
                                                android:ems="9"
                                                android:hint="Saisir vos allergies"
                                                android:inputType="text"
                                                android:paddingStart="5dp"
                                                android:textSize="16sp"
                                                tools:ignore="RtlSymmetry" />

                                        </LinearLayout>
                                        <ImageButton
                                            android:id="@+id/btn_a"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="20dp"
                                            android:layout_toEndOf="@id/allergie"
                                            android:background="@android:color/transparent"
                                            android:src="@drawable/plus">

                                        </ImageButton>

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:text="Allergies au latex"
                                            android:paddingStart="5dp"
                                            android:paddingEnd="5dp"
                                            android:textSize="12sp"
                                            android:background="@drawable/purple"
                                            android:layout_below="@id/allergie"
                                            android:textStyle="bold" />
                                    </RelativeLayout>
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal">
                                        <LinearLayout
                                            android:id="@+id/medoc"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="15dp"
                                            android:layout_centerVertical="true"
                                            android:orientation="vertical">

                                            <!-- TextView et EditText pour le pays -->
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Médicament"
                                                android:textSize="13sp"
                                                android:textStyle="bold" />
                                            <EditText
                                                android:id="@+id/medoctxt"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/box_b"
                                                android:ems="9"
                                                android:hint="Saisir vos médicaments"
                                                android:inputType="text"
                                                android:paddingStart="5dp"
                                                android:textSize="16sp"
                                                tools:ignore="RtlSymmetry" />

                                        </LinearLayout>
                                        <ImageButton
                                            android:id="@+id/btn_c"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="20dp"
                                            android:layout_toEndOf="@id/medoc"
                                            android:background="@android:color/transparent"
                                            android:src="@drawable/plus">

                                        </ImageButton>

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:text="Paracetamol"
                                            android:paddingStart="5dp"
                                            android:paddingEnd="5dp"
                                            android:textSize="12sp"
                                            android:background="@drawable/purple"
                                            android:layout_below="@id/medoc"
                                            android:textStyle="bold" />
                                    </RelativeLayout>
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal">
                                        <LinearLayout
                                            android:id="@+id/chirugie"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="15dp"
                                            android:layout_centerVertical="true"
                                            android:orientation="vertical">

                                            <!-- TextView et EditText pour le pays -->
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Intervention Chirurgicales"
                                                android:textSize="13sp"
                                                android:textStyle="bold" />
                                            <EditText
                                                android:id="@+id/chirugie_id"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/box_b"
                                                android:ems="9"
                                                android:hint="Saisissez vos antécédents chirurgicaux."
                                                android:inputType="text"
                                                android:paddingStart="5dp"
                                                android:textSize="16sp"
                                                tools:ignore="RtlSymmetry" />

                                        </LinearLayout>
                                        <ImageButton
                                            android:id="@+id/btn_d"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="20dp"
                                            android:layout_toEndOf="@id/chirugie"
                                            android:background="@android:color/transparent"
                                            android:src="@drawable/plus">

                                        </ImageButton>

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:text="Chirugie Dentaire"
                                            android:paddingStart="5dp"
                                            android:paddingEnd="5dp"
                                            android:textSize="12sp"
                                            android:background="@drawable/purple"
                                            android:layout_below="@id/chirugie"
                                            android:textStyle="bold" />
                                    </RelativeLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_margin="10dp"
                                        android:layout_marginTop="15dp">
                                        <TextView
                                            android:id="@+id/vpwdtxt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Antecedent Médicaux"
                                            android:textSize="13sp"
                                            android:textStyle="bold"/>

                                        <EditText
                                            android:id="@+id/vpwd"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ems="9"
                                            android:inputType="text"
                                            android:hint="@string/hint_ange"
                                            android:maxLines="2"
                                            android:paddingStart="5dp"
                                            android:textSize="16sp"
                                            tools:ignore="RtlSymmetry"
                                            android:background="@drawable/box_c" />

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_margin="10dp"
                                        android:layout_marginTop="15dp">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Médicament Pris"
                                            android:textSize="13sp"
                                            android:textStyle="bold"/>

                                        <EditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ems="9"
                                            android:inputType="text"
                                            android:hint="Posologie, Fréquence ..."
                                            android:maxLines="2"
                                            android:paddingStart="5dp"
                                            android:textSize="16sp"
                                            tools:ignore="RtlSymmetry"
                                            android:background="@drawable/box_c" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/line"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="20dp"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <!-- Boutons d'annulation et de sauvegarde -->
                                        <RelativeLayout
                                            android:id="@+id/btn2"
                                            android:layout_width="0dp"
                                            android:layout_height="40dp"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:background="@drawable/rectangle_blanc">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="@string/annul"
                                                android:textSize="14sp"
                                                android:textStyle="bold" />
